{
  "nodeName": "microsoft outlook",
  "summary": "此節點用於使用 Microsoft Outlook API，可執行與郵件相關的操作，如創建、刪除、發送郵件草稿等。",
  "parameters": [
    {
      "name": "resource",
      "type": "options",
      "description": "指定要操作的資源類型，如郵件草稿、郵件資料夾等。",
    },
    {
      "name": "operation",
      "type": "options",
      "description": "指定要執行的操作，如創建郵件草稿、刪除郵件草稿等。",
    },
    {
      "name": "messageId",
      "type": "string",
      "description": "要操作的郵件的唯一識別碼。",
    },
    {
      "name": "subject",
      "type": "string",
      "description": "郵件的主題。",
    },
    {
      "name": "bodyContent",
      "type": "string",
      "description": "郵件的內容。",
    },
    {
      "name": "additionalFields",
      "type": "collection",
      "description": "其他可選的郵件屬性設定。",
    }
  ],
  "example": {
    "node": {
      "parameters": {
        "resource": "draft",
        "operation": "create",
        "messageId": "12345",
        "subject": "Test Email",
        "bodyContent": "This is a test email.",
        "additionalFields": {
          "attachments": {
            "attachments": [
              {
                "binaryPropertyName": "attachment1"
              }
            ]
          },
          "bccRecipients": "test@example.com",
          "bodyContentType": "html"
        }
      }
    }
  }
}