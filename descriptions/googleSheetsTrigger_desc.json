{
  "nodename": "google sheets trigger",
  "summary": "此節點會在 Google Sheets 事件發生時啟動工作流程。",
  "parameters": [
    {
      "name": "poll times",
      "type": "fixedcollection",
      "description": "時間間隔，用於定義輪詢頻率。"
    },
    {
      "name": "mode",
      "type": "options",
      "description": "觸發事件的頻率。",
    },
    {
      "name": "hour",
      "type": "number",
      "description": "觸發事件的小時（24小時制）。",
    },
    {
      "name": "minute",
      "type": "number",
      "description": "觸發事件的分鐘。",
    }
  ],
  "example": {
    "node": {
      "parameters": {
        "polltimes": [
          {
            "mode": "everyday",
            "hour": 14,
            "minute": 0
          }
        ]
      }
    }
  }
}